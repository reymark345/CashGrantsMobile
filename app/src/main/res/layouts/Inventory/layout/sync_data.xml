<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

    
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/mainToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:title="Sync Data"
            android:backgroundTint="@color/background"
            app:liftOnScroll="true"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_progress"
        android:layout_below="@+id/app_bar_page"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        app:contentPadding="@dimen/_18sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardBackgroundColor="@color/background"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_progressbar"
            android:layout_below="@+id/app_bar_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status..." />

            <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                android:id="@+id/progressBar"
                android:layout_below="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:indeterminate="false"
                app:mpb_showProgressBackground="true"
                app:mpb_progressStyle="horizontal"
                style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal" />

            <TextView
                android:id="@+id/progressCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_alignLeft="@id/progressBar"
                android:layout_below="@id/progressBar"
                android:fontFamily="sans-serif-condensed"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15dp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:text="%"
                android:layout_alignLeft="@id/progressBar"
                android:layout_below="@id/progressBar"
                android:fontFamily="sans-serif-condensed"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/progressFigure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_alignRight="@id/progressBar"
                android:layout_below="@id/progressBar"
                android:layout_marginRight="80dp"
                android:fontFamily="sans-serif-condensed"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/slash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/progressBar"
                android:layout_alignRight="@id/progressBar"
                android:layout_marginRight="60dp"
                android:fontFamily="sans-serif-condensed"
                android:text="/"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/progressFigureLast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_alignRight="@id/progressBar"
                android:layout_below="@id/progressBar"
                android:fontFamily="sans-serif-condensed"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ll_sync_logs"
        android:layout_below="@+id/cv_progress"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/gridLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sync logs"
            android:layout_marginLeft="20px"
            android:layout_alignTop="@id/gridView"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15dp" />

        <GridView
            android:id="@+id/gridView"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:columnWidth="300dp"
            android:padding="10dp"
            android:gravity="center"
            android:numColumns="auto_fit" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_error_logs"
        android:layout_width="match_parent"
        android:layout_below="@+id/ll_sync_logs"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/gridLbl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Error logs"
            android:layout_marginLeft="20px"
            android:layout_alignTop="@id/gridView1"
            android:layout_below="@id/gridView"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15dp" />

        <GridView
            android:id="@+id/gridView1"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:columnWidth="300dp"
            android:padding="10dp"
            android:gravity="center"
            android:numColumns="auto_fit" />
    </LinearLayout>

            <Button
                android:id="@+id/btnSync"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@+id/ll_error_logs"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/mybutton"
                android:text="SYNC"
                android:textColor="@color/white"
                android:textSize="30dp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>