<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:text="III-A. Non-Moving Account Information"
        android:fontFamily="sans-serif-condensed"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15dp" />


    <ScrollView
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_non_emv"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    app:helperTextTextColor="@color/validation"
                    app:startIconDrawable="@drawable/ic_card_number">

                    <EditText
                        android:id="@+id/edt_non_emv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Non-EMV Card Number"
                        android:inputType="numberDecimal"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_card_name"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/til_non_emv"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    app:helperTextTextColor="@color/validation"
                    app:startIconDrawable="@drawable/ic_lastname">

                    <EditText
                        android:id="@+id/edt_card_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Card Name"
                        android:inputType="numberDecimal"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_nma_amount"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/til_card_name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    app:helperTextTextColor="@color/validation"
                    app:startIconDrawable="@drawable/ic_baseline_currency_ruble_24">

                    <EditText
                        android:id="@+id/edt_nma_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="NMA Amount as of Sep. 30, 2020"
                        android:inputType="numberDecimal"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_nma_reason"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/til_nma_amount"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    app:helperText="Required"
                    app:helperTextTextColor="@color/validation"
                    app:startIconDrawable="@drawable/ic_baseline_text_snippet_24">

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/aat_nma_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="Reason for NMA"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_nma_others_reason"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/til_reason_why_mma"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    app:endIconMode="clear_text"
                    app:helperText="Required"
                    app:helperTextTextColor="@color/validation"
                    app:startIconDrawable="@drawable/ic_baseline_text_snippet_24">

                    <EditText
                        android:id="@+id/edt_nma_others_reason"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:hint="Other reason for NMA"
                        android:inputType="textMultiLine"
                        android:overScrollMode="always"
                        android:padding="15dp"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_nma_date_claimed"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/til_nma_reason"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    app:endIconMode="clear_text"
                    app:helperTextTextColor="@color/validation"
                    app:startIconDrawable="@drawable/ic_baseline_calendar_today_24">

                    <EditText
                        android:id="@+id/edt_nma_date_claimed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Date Withdrawn/Claimed"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_nma_remarks"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/til_nma_date_claimed"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    app:endIconMode="clear_text"
                    app:helperTextTextColor="@color/validation"
                    app:startIconDrawable="@drawable/ic_baseline_text_snippet_24">

                    <EditText
                        android:id="@+id/edt_nma_remarks"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:hint="Remarks"
                        android:inputType="textMultiLine"
                        android:overScrollMode="always"
                        android:padding="15dp"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>