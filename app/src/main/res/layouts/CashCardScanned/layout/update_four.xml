<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView1_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:text="III-B. Pawning Details"
        android:fontFamily="sans-serif-condensed"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15dp" />

    <ScrollView
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_lendername_1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    app:endIconMode="clear_text"
                    app:helperTextTextColor="@color/validation"
                    app:startIconDrawable="@drawable/ic_baseline_person_24">

                    <EditText
                        android:id="@+id/edtLenderName_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name of Lender"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_pawningdate_1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/til_lendername_1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    app:endIconMode="clear_text"
                    app:helperTextTextColor="@color/validation"
                    app:startIconDrawable="@drawable/ic_baseline_calendar_today_24">

                    <EditText
                        android:id="@+id/edtPawningDate_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Date of Pawning"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_loanedamount_1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/til_pawningdate_1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    app:endIconMode="clear_text"
                    app:helperTextTextColor="@color/validation"
                    app:startIconDrawable="@drawable/ic_baseline_currency_ruble_24">

                    <EditText
                        android:id="@+id/edtLoanedAmount_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Loaned Amount"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_lenderaddress_1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/til_loanedamount_1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    app:endIconMode="clear_text"
                    app:helperTextTextColor="@color/validation"
                    app:startIconDrawable="@drawable/ic_location">

                    <EditText
                        android:id="@+id/edtLenderAddress_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Address of Lender"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_dateretrieved_1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/til_lenderaddress_1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    app:endIconMode="clear_text"
                    app:helperTextTextColor="@color/validation"
                    app:startIconDrawable="@drawable/ic_baseline_calendar_today_24">

                    <EditText
                        android:id="@+id/edtDateRetrieved_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Date Retrieved"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_interest_1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/til_dateretrieved_1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    app:endIconMode="clear_text"
                    app:helperTextTextColor="@color/validation"
                    app:startIconDrawable="@drawable/ic_creditcard">

                    <EditText
                        android:id="@+id/edtInterest_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Interest"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_status_1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/til_interest_1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    app:helperTextTextColor="@color/validation"
                    app:startIconDrawable="@drawable/ic_baseline_book_24">

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/spinnerStatus_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Status"
                        android:inputType="none" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_pawningreason_1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/til_status_1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    app:endIconMode="clear_text"
                    app:helperTextTextColor="@color/validation"
                    app:startIconDrawable="@drawable/ic_baseline_text_snippet_24">

                    <EditText
                        android:id="@+id/edtPawningReason_1"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:hint="Reason for Pawning"
                        android:inputType="textMultiLine"
                        android:overScrollMode="always"
                        android:padding="15dp"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_offensehistory_1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/til_pawningreason_1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    app:helperTextTextColor="@color/validation"
                    app:startIconDrawable="@drawable/ic_baseline_history_24">

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/spinnerOffenseHistory_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Offense History"
                        android:inputType="none" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_offensehistorydate_1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/til_offensehistory_1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    app:endIconMode="clear_text"
                    app:helperTextTextColor="@color/validation"
                    app:startIconDrawable="@drawable/ic_baseline_calendar_today_24">

                    <EditText
                        android:id="@+id/edtOffenseHistoryDate_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Offense History Date"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_pdremarks_1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/til_offensehistorydate_1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    app:endIconMode="clear_text"
                    app:helperTextTextColor="@color/validation"
                    app:startIconDrawable="@drawable/ic_baseline_text_snippet_24">

                    <EditText
                        android:id="@+id/edtPdRemarks_1"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:hint="Remarks"
                        android:inputType="textMultiLine"
                        android:overScrollMode="always"
                        android:padding="15dp"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_intervention_1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/til_pdremarks_1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    app:endIconMode="clear_text"
                    app:helperTextTextColor="@color/validation"
                    app:startIconDrawable="@drawable/ic_baseline_person_24">

                    <EditText
                        android:id="@+id/edtIntervention_1"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:hint="Intervention of C/ML"
                        android:inputType="textMultiLine"
                        android:overScrollMode="always"
                        android:padding="15dp"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_otherdetails_1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/til_intervention_1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="100dp"
                    app:endIconMode="clear_text"
                    app:helperTextTextColor="@color/validation"
                    app:startIconDrawable="@drawable/ic_baseline_format_align_left_24">

                    <EditText
                        android:id="@+id/edtOtherDetails_1"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:hint="Other Details"
                        android:inputType="textMultiLine"
                        android:overScrollMode="always"
                        android:padding="15dp"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>


</LinearLayout>

