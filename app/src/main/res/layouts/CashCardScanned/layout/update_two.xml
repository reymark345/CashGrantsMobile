                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:hint="Cardholder Name"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_otherisavailable1_1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/til_othercardholdername1_1"
                        android:layout_marginTop="10dp"
                        app:helperTextTextColor="@color/validation"
                        app:startIconDrawable="@drawable/ic_baseline_credit_card_off_24">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/spinnerOtherIsAvailable1_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:hint="Is Card Available" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_otherisavailablereason1_1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/til_otherisavailable1_1"
                        android:layout_marginTop="10dp"
                        app:helperTextTextColor="@color/validation"
                        app:startIconDrawable="@drawable/ic_baseline_text_snippet_24">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
