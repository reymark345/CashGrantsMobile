                        android:layout_height="wrap_content"
                        android:layout_below="@+id/til_otherisavailable2_1"
                        android:layout_marginTop="10dp"
                        app:helperTextTextColor="@color/validation"
                        app:startIconDrawable="@drawable/ic_baseline_text_snippet_24">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/spinnerOtherIsAvailableReason2_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:hint="Reason"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/otherCardAvailability3_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/otherCardAvailability2_1"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="100dp"
                android:backgroundTint="@color/background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="III - Other Card Availablity (Optional)"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textSize="10sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_othercardnumber3_1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:endIconMode="clear_text"
                        app:helperTextTextColor="@color/validation"
                        app:startIconDrawable="@drawable/ic_creditcard">

                        <EditText
                            android:id="@+id/edtOtherCardNumber3_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:hint="Other Card Number"
