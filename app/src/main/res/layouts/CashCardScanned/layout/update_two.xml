<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView1_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:text="II. EMV Cash Card Information"
        android:fontFamily="sans-serif-condensed"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15dp" />

    <ScrollView
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_cardreleased_1"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                app:endIconMode="clear_text"
                app:helperText="Required"
                app:helperTextTextColor="@color/validation"
                app:startIconDrawable="@drawable/ic_baseline_calendar_today_24">

                <EditText
                    android:id="@+id/edtCardReleased_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Date of Card Released"
                    android:editable="false"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_whoreleased_1"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/til_cardreleased_1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:endIconMode="clear_text"
                app:helperText="Required"
                app:helperTextTextColor="@color/validation"
                app:startIconDrawable="@drawable/ic_baseline_person_24">

                <EditText
                    android:id="@+id/edtWhoReleased_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Who Released the Card"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_placereleased_1"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/til_whoreleased_1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:endIconMode="clear_text"
                app:helperText="Required"
                app:helperTextTextColor="@color/validation"
                app:startIconDrawable="@drawable/ic_location">

                <EditText
                    android:id="@+id/edtPlaceReleased_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Place of Card Released"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_currentgranteenumber_1"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/til_placereleased_1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:endIconMode="clear_text"
                app:helperText="Required"
                app:helperTextTextColor="@color/validation"
                app:startIconDrawable="@drawable/ic_creditcard">

                <EditText
                    android:id="@+id/edtCurrentGranteeNumber_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Current Grantee Card Number"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAvailability_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/til_currentgranteenumber_1"
                android:layout_margin="8dp"
                android:backgroundTint="@color/background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
