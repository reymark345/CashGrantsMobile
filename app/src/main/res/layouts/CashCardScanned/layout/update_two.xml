                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/til_othercardnumber1_1"
                        android:layout_marginTop="10dp"
                        app:endIconMode="clear_text"
                        app:helperTextTextColor="@color/validation"
                        app:startIconDrawable="@drawable/ic_creditcard">

                        <EditText
                            android:id="@+id/edtOtherCardNumberSeries1_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:hint="Other Card Series Number"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_othercardholdername1_1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/til_othercardnumberseries1_1"
                        android:layout_marginTop="10dp"
                        app:endIconMode="clear_text"
                        app:helperTextTextColor="@color/validation"
                        app:startIconDrawable="@drawable/ic_baseline_person_24">

                        <EditText
