                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/til_othercardnumber2_1"
                        android:layout_marginTop="10dp"
                        app:endIconMode="clear_text"
                        app:helperTextTextColor="@color/validation"
                        app:startIconDrawable="@drawable/ic_creditcard">

                        <EditText
                            android:id="@+id/edtOtherCardNumberSeries2_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:hint="Other Card Series Number"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_othercardholdername2_1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/til_othercardnumberseries2_1"
                        android:layout_marginTop="10dp"
                        app:endIconMode="clear_text"
                        app:helperTextTextColor="@color/validation"
                        app:startIconDrawable="@drawable/ic_baseline_person_24">

                        <EditText
                            android:id="@+id/edtOtherCardHolderName2_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:hint="Cardholder Name"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_otherisavailable2_1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/til_othercardholdername2_1"
                        android:layout_marginTop="10dp"
                        app:helperTextTextColor="@color/validation"
                        app:startIconDrawable="@drawable/ic_baseline_credit_card_off_24">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/spinnerOtherIsAvailable2_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:hint="Is Card Available" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_otherisavailablereason2_1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
